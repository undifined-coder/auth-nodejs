<link rel="stylesheet" href="../assets/css/login.css">
<script src="https://www.google.com/recaptcha/api.js"></script>
<div class="row mt-5">
    <div class="col-md-6 m-auto">
        <img src="/assets/lock.png" id="lock-img" alt="icon" width="20%" />

        <div class="card card-body text-center" id="card-box">
            <h1 class="mb-3">

            </h1>
            <h2>
                Login
            </h2>
            <%- include ("./massages.ejs") %>
            <form action="/auth/login" method="POST">
                <div class="form-group">
                    <label for="email">Email</label>
                    <input type="email" id="email" name="email" class="form-control" placeholder="Enter Email" />
                </div>
                <div class="form-group">
                    <label for="password">Password</label>
                    <input type="password" id="password" name="password" class="form-control"
                        placeholder="Enter Password" />
                </div>
                <button class="g-recaptcha" 
        data-sitekey="6Leogk0mAAAAAJS91b9xh48QP_SVCvWhaYRbRYBE" 
        data-callback='onSubmit' 
        data-action='submit'>Submit</button>
                
            </form>
            <p class="mt-4">
                New User? <a href="/auth/register">Register</a>
            </p>
            <p>
                Forgot Password? <a href="/auth/forgot">Reset</a>
            </p>
        </div>
    </div>
</div>

<script>
    function onSubmit(token) {
      document.getElementById("demo-form").submit();
    }
  </script>